<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Statistic">

    <ScrollView
        android:layout_above="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp">

            <TextView
                android:id="@+id/title_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/arial_mt_rounded"
                android:text="Your Progress Report"
                android:autoSizeTextType="uniform"
                android:textColor="@color/heading"
                android:textSize="22sp"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintHorizontal_bias="0.50"
                app:layout_constraintVertical_bias="0.50"
                app:layout_constraintWidth_percent="0.50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/week_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_text1"
                android:layout_marginTop="9dp"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp">
                    <RelativeLayout
                        android:id="@+id/imageLeft"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45"
                        android:adjustViewBounds="true"
                        >
                        <TextView
                            android:id="@+id/weekly_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button"
                            android:fontFamily="@font/arial_mt_rounded"
                            android:text="WEEKLY"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/background" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imageRight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        >
                        <TextView
                            android:id="@+id/monthly_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button"
                            android:fontFamily="@font/arial_mt_rounded"
                            android:text="MONTHLY"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textColor="@color/whitesmoke"
                            android:textStyle="bold"
                            app:backgroundTint="@color/background" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/week_month"
                android:layout_marginTop="13dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:id="@+id/avercon"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="0.45"
                        android:adjustViewBounds="true"
                        android:background="@drawable/rectangle">

                        <TextView
                            android:id="@+id/averdur1_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/arial_mt_rounded"
                            android:text="Average"
                            android:textAlignment="center"
                            android:textColor="@color/heading"
                            android:textSize="15sp"></TextView>
                        <TextView
                            android:id="@+id/averdur_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:layout_below="@id/averdur1_txt"
                            android:fontFamily="@font/arial_mt_rounded"
                            android:text="Sleep Duration"
                            android:textAlignment="center"
                            android:textColor="@color/heading"
                            android:textSize="15sp"></TextView>

                        <RelativeLayout
                            android:id="@+id/avertextcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/averdur_txt"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/ave_total_duration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/arial_mt_rounded"
                                android:text="@string/no_text"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="39sp" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/margin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"/>

                    <RelativeLayout
                        android:id="@+id/qualcon"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="0.45"
                        android:adjustViewBounds="true"
                        android:background="@drawable/rectangle" >

                        <TextView
                            android:id="@+id/aversleep1_qual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/arial_mt_rounded"
                            android:textAlignment="center"
                            android:textColor="@color/heading"
                            android:text="Average"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/aversleep_qual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:layout_below="@id/aversleep1_qual"
                            android:fontFamily="@font/arial_mt_rounded"
                            android:textAlignment="center"
                            android:textColor="@color/heading"
                            android:text="Sleep Quality"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/qualtextcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/aversleep_qual"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/ave_sleep_quality"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/arial_mt_rounded"
                                android:text="@string/no_text"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="28sp" />

                            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                                android:id="@+id/aveProgressBar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:elevation="2dp"
                                app:cpb_background_progressbar_color="@color/navig"
                                app:cpb_background_progressbar_width="9dp"
                                app:cpb_progress="0"
                                app:cpb_progress_direction="to_right"
                                app:cpb_progress_max="100"
                                app:cpb_progressbar_color="@color/white"
                                app:cpb_progressbar_width="9dp"
                                app:cpb_round_border="false"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent" />

                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/sleepqual_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rela_card"
                android:layout_alignStart="@+id/card3"
                android:layout_alignEnd="@+id/card3"
                android:layout_marginTop="42dp"
                android:textSize="17sp"
                android:textAlignment="center"
                android:fontFamily="@font/arial_mt_rounded"
                android:text="Sleep Quality"
                android:textColor="@color/heading"
                app:layout_constraintEnd_toEndOf="@+id/rela_card"
                app:layout_constraintStart_toStartOf="@+id/rela_card"
                app:layout_constraintTop_toTopOf="@+id/rela_card" />

            <ImageView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_below="@+id/rela_card"
                android:layout_marginTop="76dp"
                android:background="@drawable/rectangle"
                app:backgroundTint="#E3EDF1"
                app:layout_constraintEnd_toEndOf="@+id/rela_card"
                app:layout_constraintTop_toBottomOf="@+id/rela_card" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/sleepqual_graph"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_below="@+id/rela_card"
                android:layout_marginStart="11dp"
                android:layout_marginTop="86dp"
                android:layout_marginEnd="11dp"
                app:layout_constraintEnd_toEndOf="@+id/card3"
                app:layout_constraintStart_toStartOf="@+id/card3"
                app:layout_constraintTop_toTopOf="@+id/card3" />

            <TextView
                android:id="@+id/totaldur_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card3"
                android:layout_alignStart="@+id/card3"
                android:layout_alignEnd="@+id/card3"
                android:layout_marginTop="44dp"
                android:fontFamily="@font/arial_mt_rounded"
                android:text="Sleep Duration"
                android:textAlignment="center"
                android:textColor="@color/heading"
                android:textSize="17sp"/>

            <ImageView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_below="@+id/card3"
                android:layout_marginTop="75dp"
                android:background="@drawable/rectangle"
                app:backgroundTint="#E3EDF1"
                app:layout_constraintTop_toBottomOf="@+id/card3" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/sleepdur_graph"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_below="@+id/card3"
                android:layout_marginStart="11dp"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="11dp"
                app:layout_constraintEnd_toEndOf="@+id/card4"
                app:layout_constraintStart_toStartOf="@+id/card4"
                />

            <TextView
                android:id="@+id/mood_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card4"
                android:layout_alignStart="@+id/card4"
                android:layout_alignEnd="@+id/card4"
                android:layout_marginTop="46dp"
                android:fontFamily="@font/arial_mt_rounded"
                android:text="Mood"
                android:textAlignment="center"
                android:textColor="@color/heading"
                android:textSize="17sp"/>

            <ImageView
                android:id="@+id/card44"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_below="@+id/card4"
                android:layout_marginTop="81dp"
                android:background="@drawable/rectangle"
                app:backgroundTint="#E3EDF1"
                app:layout_constraintTop_toBottomOf="@+id/card4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card5"
                android:layout_below="@+id/card4"
                android:layout_marginTop="78dp"
                app:layout_constraintTop_toBottomOf="@+id/card4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.11"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/moodtxt"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/arial_nova_light"
                                android:text="Count"
                                android:rotation="270"
                                android:textStyle="bold"                                android:textColor="@color/heading"
                                android:textSize="13sp"
                                android:gravity="center_vertical" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/moodconA"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:adjustViewBounds="true" >

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/bar_chart"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"
                            />

                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/sleepsummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card5"
                android:layout_alignStart="@+id/card5"
                android:layout_alignEnd="@+id/card5"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/arial_mt_rounded"
                android:text="Sleep Summary"
                android:textAlignment="center"
                android:textColor="@color/heading"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/card3"
                app:layout_constraintTop_toBottomOf="@+id/card3" />


            <RelativeLayout
                android:id="@+id/lowest_dur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rela_cards"
                android:layout_alignStart="@+id/card4"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/rectangle2"
                app:layout_constraintTop_toBottomOf="@+id/rela_cards">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp">

                    <RelativeLayout
                        android:id="@+id/longestcon1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="0.18"
                        android:adjustViewBounds="true"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            >
                            <ImageView
                                android:id="@+id/wallclock_img"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/wallclock" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/margin2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.50"
                        android:adjustViewBounds="true"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="2dp"
                            >
                            <TextView
                                android:id="@+id/highestdur_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/arial_nova_light"
                                android:text="Longest Sleep Duration"
                                android:textSize="16sp"
                                android:textColor="@color/heading" />

                            <RelativeLayout
                                android:id="@+id/highestdurtextcon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/highestdur_txt"
                          >

                                <TextView
                                        android:id="@+id/highest_durDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:fontFamily="@font/arial_mt_rounded"
                                        android:text="@string/no_text"
                                        android:textColor="@color/heading"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/longestcon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.22"
                        android:adjustViewBounds="true"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginEnd="8dp"
                            >

                            <TextView
                                android:id="@+id/highest_sleepdur"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial_mt_rounded"
                                android:text="@string/no_text"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/heading"
                                android:textSize="26sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/highest_dur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lowest_dur"
                android:layout_marginBottom="33dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangle2"
                app:layout_constraintTop_toBottomOf="@+id/lowest_dur">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp">

                    <RelativeLayout
                        android:id="@+id/shortestcon1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="0.18"
                        android:adjustViewBounds="true"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginEnd="8dp"

                            >
                            <ImageView
                                android:id="@+id/wokeup"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/wallclock" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/margin3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.50"
                        android:adjustViewBounds="true"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="2dp"
                            >
                            <TextView
                                android:id="@+id/lowest_durtxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:textSize="16sp"
                                android:fontFamily="@font/arial_nova_light"
                                android:text="Shortest Sleep Duration"
                                android:textColor="@color/heading" />

                            <RelativeLayout
                                android:id="@+id/lowestdurtextcon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/lowest_durtxt"
                                >

                                <TextView
                                    android:id="@+id/lowest_durDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:fontFamily="@font/arial_mt_rounded"
                                    android:text="@string/no_text"
                                    android:textColor="@color/heading"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/shortestcon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.22"
                        android:adjustViewBounds="true"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginEnd="8dp"

                            >

                            <TextView
                                android:id="@+id/lowest_sleepdur"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial_mt_rounded"
                                android:text="@string/no_text"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/heading"
                                android:textSize="26sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/sleepqual_title1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/sleepsummary"
                android:layout_alignStart="@+id/sleepsummary"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/arial_mt_rounded"
                android:text="Sleep Quality"
                android:textAlignment="center"
                android:textColor="@color/subtitle"
                android:textSize="15dp" />

            <RelativeLayout
                android:id="@+id/rela_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sleepqual_title1"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/cardper"
                        android:layout_height="160dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.45"
                        android:adjustViewBounds="true"
                        android:background="@drawable/rectangle1">

                        <TextView
                            android:id="@+id/highest_sleepQual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/arial_nova_light"
                            android:text="Highest"
                            android:textAlignment="center"
                            android:textColor="@color/subtitle"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:id="@+id/sleepqualtextcon"
