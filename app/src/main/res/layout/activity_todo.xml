<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Todo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/card3"
                    android:layout_width="wrap_content"
                    android:layout_height="215dp"
                    android:adjustViewBounds="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/solid_rectangle"
                    app:backgroundTint="#DBE9E9">

                    <TextView
                        android:id="@+id/forgot_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/back_button"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/arial_mt_rounded"
                        android:text="Thoughts?"
                        android:textColor="@color/heading"
                        android:textSize="38sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/back_button" />

                    <TextView
                        android:id="@+id/subheading_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="28dp"
                        android:layout_below="@id/forgot_txt"
                        android:fontFamily="@font/arial_nova_light"
                        android:text="@string/todo"
                        android:textColor="@color/subtitle"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/forgot_txt" />

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="24dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="33dp"
                        android:contentDescription="TODO"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_back"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/delete_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="37dp"
                        android:layout_marginEnd="28dp"
                        android:layout_toEndOf="@+id/back_button"
                        android:fontFamily="@font/arial_mt_rounded"
                        android:gravity="right|center_vertical"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:text="DELETE"
                        android:textAllCaps="false"
                        android:textColor="@color/subtitle"
                        android:textSize="15sp"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/back_button"
                        app:layout_constraintTop_toTopOf="parent" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <com.baoyz.swipemenulistview.SwipeMenuListView
                            android:id="@+id/todotxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:choiceMode="multipleChoice"
                            android:textColor="@color/subtitle"
                            android:textSize="59dp"
                            android:scrollbars="none"
                            android:elevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                       />
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/botttom_sheet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="right"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/ic_baseline_add_24"
                            app:backgroundTint="#DBE9E9">

                        </com.google.android.material.floatingactionbutton.FloatingActionButton>

                    </RelativeLayout>
                        
                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>