<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Recording">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_height="match_parent">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/gifImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/giphy" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextClock
                                    android:id="@+id/textClock"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arial_mt_rounded"
                                    android:format12Hour="hh:mm a"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="55sp" />

                                <Chronometer
                                    android:id="@+id/chronometer_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textClock"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/arial_nova_light"
                                    android:gravity="center"
                                    android:layout_marginTop="13dp"
                                    android:textColor="@android:color/white"
                                    android:textSize="23sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_below="@id/chronometer_txt"
                                    android:layout_marginTop="80dp"
                                    android:layout_marginBottom="80dp"
                                    android:id="@+id/imagecon"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/moon_button"
                                        android:layout_width="245dp"
                                        android:layout_height="231dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/moonlighticon"
                                        android:elevation="12dp"
                                        android:padding="2dp"></ImageView>
                                    <Switch
                                        android:id="@+id/switch_btn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignEnd="@+id/moon_button"
                                        android:thumbTint="@color/white"
                                        android:layout_marginTop="5dp"
                                        android:layout_below="@id/moon_button"
                                        android:trackTint="@color/buttons"></Switch>

                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/stop_button1"
                                    android:layout_below="@id/imagecon"
                                    android:layout_marginTop="30dp"
                                    >

                                    <Button
                                        android:id="@+id/stop_button"
                                        android:layout_width="300dp"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/arial_mt_rounded"
                                        android:layout_centerHorizontal="true"
                                        android:background="@drawable/rectangle1"
                                        android:padding="4dp"
                                        android:text="Stop Tracking"
                                        android:textAllCaps="false"
                                        android:textColor="@color/heading"
                                        android:textSize="20sp"></Button>
                                </RelativeLayout>
                            </RelativeLayout>


                        </RelativeLayout>

                    </RelativeLayout>



        </RelativeLayout>


    </ScrollView>


</RelativeLayout>