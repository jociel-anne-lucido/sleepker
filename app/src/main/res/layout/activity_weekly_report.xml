<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".WeeklyReport">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/infocon"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.05"
                    android:adjustViewBounds="true"
                    android:background="#E2EEEE"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/back_button1"
                        android:layout_width="24dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginStart="22dp"
                        android:contentDescription="TODO"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/forgot_txt"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_back"
                        tools:ignore="VectorDrawableCompat" />


                    <TextView
                        android:id="@+id/forgot_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/arial_mt_rounded"
                        android:text="Your Sleep Record"
                        android:layout_below="@id/back_button1"
                        android:textColor="@color/heading"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_marginStart="22dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="22dp"
                        android:layout_marginBottom="29dp"
                        android:layout_below="@id/forgot_txt"
                        android:background="@drawable/search_view_border"
                        app:iconifiedByDefault="false"
                        android:theme="@style/ThemeOverlay.SearchView"
                        app:queryBackground="@android:color/transparent"
                        app:queryHint="DD-MMM-YYYY" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.9"
                    android:paddingTop="15dp"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"

                        android:scrollbars="none" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>