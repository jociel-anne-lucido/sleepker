<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Clock">

    <ScrollView
        android:layout_above="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/solid_rectangle"
                app:backgroundTint="#DBE9E9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">

                <LinearLayout
                    android:layout_width="315dp"
                    android:layout_height="93dp"
                    android:layout_alignStart="@+id/sleep_card"
                    android:layout_alignTop="@+id/sleep_card"
                    android:layout_alignEnd="@+id/sleep_card"
                    android:layout_alignBottom="@+id/sleep_card"
                    android:layout_marginStart="2dp"
                    android:elevation="12dp"
                    android:paddingTop="18dp"
                    android:layout_marginEnd="0dp"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/greetingsub1"
                        android:layout_width="199dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/card33"
                        android:layout_alignEnd="@+id/card33"
                        android:layout_marginLeft="5dp"
                        android:elevation="2dp"
                        android:typeface="serif"
                        android:text="How to improve your sleep?"
                        android:textColor="@color/white"
                        android:textSize="23dp"
                        android:textStyle="italic"></TextView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/card1"
                    android:layout_width="323dp"
                    android:layout_height="87dp"
                    android:layout_below="@+id/greetingsub"
                    android:layout_alignStart="@+id/greetings1"
                    android:layout_alignEnd="@+id/profile"
                    android:layout_marginTop="43dp"
                    android:background="@drawable/rectangle"
                    android:elevation="2dp"
                    app:backgroundTint="#9FC3C4" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card1"
                    android:layout_alignStart="@+id/card1"
                    android:layout_alignTop="@+id/card1"
                    android:layout_alignEnd="@+id/card1"
                    android:layout_marginTop="119dp"
                    android:layout_marginEnd="107dp"
                    android:text="Features"
                    android:layout_marginStart="7dp"
                    android:fontFamily="@font/arial_mt_rounded"
                    android:textColor="@color/subtitle"
                    android:textSize="18dp"></TextView>


                <TextView
                    android:id="@+id/title2"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_card"
                    android:layout_alignStart="@+id/title"
                    android:layout_alignEnd="@+id/title"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="11dp"
                    android:fontFamily="@font/arial_mt_rounded"
                    android:text="Sleep better"
                    android:textColor="@color/subtitle"
                    android:textSize="18dp"></TextView>

                <LinearLayout
                    android:layout_width="327dp"
                    android:layout_height="115dp"
                    android:layout_below="@+id/title"
                    android:id="@+id/linear_card"
                    android:layout_alignStart="@+id/card1"
                    android:layout_alignEnd="@+id/card1"
                    android:layout_marginStart="-2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="-2dp"
                    android:layout_marginBottom="2dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/notes_card"
                        android:layout_width="100dp"
                        android:layout_height="92dp"
                        android:layout_below="@+id/card1"
                        android:layout_alignStart="@+id/card1"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/notes"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Avatar" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/music_card"
                        android:layout_width="100dp"
                        android:layout_height="92dp"
                        android:layout_below="@+id/card1"
                        android:layout_alignStart="@+id/card1"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/music"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Avatar" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/record_card"
                        android:layout_width="100dp"
                        android:layout_height="92dp"
                        android:layout_below="@+id/card1"
                        android:layout_alignStart="@+id/card1"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/date_"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Avatar" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_card"
                    android:layout_alignStart="@+id/card1"
                    android:id="@+id/we"
                    android:layout_alignEnd="@+id/card1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="-2dp">

                    <TextView
                        android:id="@+id/thoughts_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/arial_nova_light"
                        android:text="Thoughts"
                        android:textColor="@color/subtitle"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/back_txt" />

                    <TextView
                        android:id="@+id/music_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/arial_nova_light"
                        android:text="Music"
                        android:textColor="@color/subtitle"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/back_txt" />

                    <TextView
                        android:id="@+id/record_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="43dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="22dp"
                        android:fontFamily="@font/arial_nova_light"
                        android:text="Record"
                        android:textColor="@color/subtitle"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/back_txt" />
                </LinearLayout>


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/sleep_card"
                    android:layout_width="323dp"
                    android:layout_height="97dp"
                    android:layout_marginBottom="35dp"
                    android:layout_below="@+id/title2"
                    android:layout_alignStart="@+id/linear_card"
                    android:layout_alignEnd="@+id/linear_card"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/insomia"
                    android:elevation="2dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Avatar" />

                <TextView
                    android:id="@+id/greetings1"
                    android:layout_width="334dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/greetings"
                    android:layout_alignStart="@+id/greetings"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/arial_mt_rounded"
                    android:textColor="@color/heading"
                    android:textSize="33sp"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/greetingsub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/greetings1"
                    android:layout_alignStart="@+id/greetings1"
                    android:layout_alignEnd="@+id/card1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/arial_nova_light"
                    android:textColor="@color/subtitle"
                    android:textSize="18dp"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/greetings"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_below="@+id/profile"
                    android:layout_marginTop="-40dp"
                    android:layout_toStartOf="@+id/profile"
                    android:fontFamily="@font/arial_mt_rounded"
                    android:textColor="@color/heading"
                    android:textSize="36sp"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/day"
                    android:layout_width="204dp"
                    android:layout_height="22dp"
                    android:layout_alignStart="@+id/card1"
                    android:layout_alignTop="@+id/card1"
                    android:layout_alignEnd="@+id/card1"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="107dp"
                    android:elevation="2dp"
                    android:fontFamily="@font/arial_mt_rounded"
                    android:textColor="@color/white"
                    android:textSize="17sp"></TextView>

                <ImageView
                    android:id="@+id/moon_button"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_alignEnd="@+id/card1"
                    android:layout_alignBottom="@+id/card1"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="21dp"
                    android:layout_toEndOf="@+id/date"
                    android:background="@drawable/moon"
                    android:elevation="12dp"
                    android:padding="2dp"></ImageView>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="243dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/day"
                    android:layout_alignStart="@+id/card1"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="6dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/arial_mt_rounded"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="normal"></TextView>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="41dp"
                    android:background="@drawable/user_pics"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.MaterialButton"></com.google.android.material.imageview.ShapeableImageView>
            </RelativeLayout>
        </RelativeLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        app:itemBackground="@color/navig"
        app:itemTextColor="@color/white"
        app:backgroundTint="@color/white"
        app:itemIconTint="@color/white"
        app:menu="@menu/menu_button"
        android:layout_alignParentBottom="true" />


</RelativeLayout>