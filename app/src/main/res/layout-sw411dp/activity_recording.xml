<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recording">

    <pl.droidsonroids.gif.GifImageView
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bd8bffd78009eab632d34294f1b760bb"/>

    <ImageView
        android:id="@+id/ss_logo"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="190dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/moonn">
    </ImageView>

    <Chronometer
        android:id="@+id/chronometer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:gravity="center"
        android:textColor="@android:color/transparent"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/chronometer_txt"
        android:layout_marginTop="70dp"
        android:background="@drawable/rectangle1"
        android:text="Stop Tracking"
        android:textAllCaps="false"
        android:textColor="@color/subtitle"
        android:padding="4dp"
        android:textSize="24sp">
    </Button>

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ss_logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/arial_mt_rounded"
        android:gravity="center"
        android:format12Hour="hh:mm a"
        android:textColor="@color/white"
        android:textSize="50sp" />

</RelativeLayout>