<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Analysis">

    <ScrollView
        android:layout_above="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/arial_mt_rounded"
                android:text="Your Sleep Cycle"
                android:textColor="@color/heading"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_text"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arial_mt_rounded"
                android:text="12 May 2021"
                android:textColor="@color/subtitle"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/title_text"
                app:layout_constraintTop_toBottomOf="@+id/title_text"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Avatar" />

            <ImageView
                android:id="@+id/weekly_report"
                android:layout_width="52dp"
                android:layout_height="35dp"
                android:layout_above="@+id/rela_card"
                android:layout_alignTop="@+id/title_text"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="9dp"
                android:background="@drawable/weekly_report" />

            <HorizontalScrollView
                android:id="@+id/rela_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_text"
                android:padding="0dp"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/card1"
                        android:layout_width="153dp"
                        android:layout_height="155dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/rectangle"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="0dp" />

                    <ImageView
                        android:id="@+id/card2"
                        android:layout_width="153dp"
                        android:layout_height="155dp"
                        android:layout_alignTop="@+id/card1"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/card1"
                        android:layout_marginStart="27dp"
                        android:background="@drawable/rectangle" />

                    <TextView
                        android:id="@+id/sleepdur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/card1"
                        android:layout_alignTop="@+id/card1"
                        android:layout_alignEnd="@+id/card1"
                        android:layout_marginTop="12dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/arial_mt_rounded"
                        android:text="Sleep Duration"
                        android:textColor="@color/heading"
                        app:layout_constraintEnd_toEndOf="@+id/card1"
                        app:layout_constraintStart_toStartOf="@+id/card1"
                        app:layout_constraintTop_toTopOf="@+id/card1" />

                    <TextView
                        android:id="@+id/new_duration"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sleepdur"
                        android:layout_alignStart="@+id/card1"
                        android:layout_alignEnd="@+id/card1"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/arial_mt_rounded"
                        android:text="@string/no_text"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="@+id/card1"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/card1"
                        app:layout_constraintTop_toBottomOf="@+id/sleepdur" />


                    <TextView
                        android:id="@+id/lastdur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/new_duration"
                        android:layout_alignStart="@+id/card1"
                        android:layout_alignEnd="@+id/card1"
                        android:layout_marginTop="21dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/arial_mt_rounded"
                        android:text="Last Recorded"
                        android:textColor="@color/heading"
                        app:layout_constraintEnd_toEndOf="@+id/card1"
                        app:layout_constraintStart_toStartOf="@+id/card1"
                        app:layout_constraintTop_toBottomOf="@+id/new_duration" />

                    <TextView
                        android:id="@+id/old_duration"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lastdur"
                        android:layout_alignStart="@+id/card1"
                        android:layout_alignEnd="@+id/card1"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/arial_mt_rounded"
                        android:text="@string/no_text"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="@+id/card1"
                        app:layout_constraintEnd_toEndOf="@+id/card1"
                        app:layout_constraintStart_toStartOf="@+id/card1"
                        app:layout_constraintTop_toBottomOf="@+id/lastdur" />

                    <TextView
                        android:id="@+id/sleepqual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/card2"
                        android:layout_alignTop="@+id/card2"
                        android:layout_alignEnd="@+id/card2"
                        android:layout_marginTop="12dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/arial_mt_rounded"
                        android:text="Sleep Quality"
                        android:textColor="@color/heading"
                        app:layout_constraintEnd_toEndOf="@+id/card2"
                        app:layout_constraintStart_toStartOf="@+id/card2"
                        app:layout_constraintTop_toTopOf="@+id/card1" />

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circularProgressBar"
                        android:layout_width="70dp"
                        android:layout_height="88dp"
                        android:layout_below="@+id/sleepqual"
                        android:layout_alignStart="@+id/sleepqual"
                        android:layout_alignEnd="@+id/sleepqual"
                        android:layout_alignBottom="@+id/card2"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        app:cpb_background_progressbar_color="@color/navig"
                        app:cpb_background_progressbar_width="9dp"
                        app:cpb_progress="0"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progress_max="100"
                        app:cpb_progressbar_color="@color/white"
                        app:cpb_progressbar_width="9dp"
                        app:cpb_round_border="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/average"
                        android:layout_width="74dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/card2"
                        android:layout_alignTop="@+id/circularProgressBar"
                        android:layout_alignEnd="@+id/card2"
                        android:layout_alignBottom="@+id/card2"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="27dp"
                        android:fontFamily="@font/arial_mt_rounded"
                        android:text="@string/no_text"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        app:layout_constraintBottom_toBottomOf="@+id/card2"
                        app:layout_constraintEnd_toEndOf="@+id/sleepqual"
                        app:layout_constraintStart_toStartOf="@+id/sleepqual"
                        app:layout_constraintTop_toTopOf="@+id/sleepqual"
                        app:layout_constraintVertical_bias="0.48" />
                </RelativeLayout>
            </HorizontalScrollView>
            <ImageView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_below="@+id/rela_card"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="45dp"
                android:background="@drawable/rectangle"
                app:backgroundTint="#E3EDF1"
                app:layout_constraintEnd_toEndOf="@+id/rela_card"
                app:layout_constraintTop_toBottomOf="@+id/rela_card" />

            <TextView
                android:id="@+id/sleepinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/card3"
                android:layout_alignTop="@+id/card3"
                android:layout_marginStart="12dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/arial_mt_rounded"
                android:text="Sleep Information"
                android:textColor="@color/heading"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/card3"
                app:layout_constraintTop_toBottomOf="@+id/card3" />

            <RelativeLayout
                android:layout_width="348dp"
                android:layout_height="148dp"
                android:layout_below="@+id/sleepinfo"
                android:layout_alignStart="@+id/card3"
                android:layout_alignEnd="@+id/card3"
                android:layout_marginStart="3dp"
                android:layout_marginTop="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/card3"
                app:layout_constraintStart_toStartOf="@+id/card3"
                app:layout_constraintTop_toBottomOf="@+id/sleepinfo"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/wokeup"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/sunrise" />

                <TextView
                    android:id="@+id/wokeup_title"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="14dp"
                    android:layout_toEndOf="@+id/wokeup"
                    android:fontFamily="@font/arial_nova_light"
                    android:text="Woke Up Time"
                    android:textColor="@color/heading" />

                <TextView
                    android:id="@+id/wokeupTime"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="34dp"
                    android:layout_toEndOf="@+id/wokeup"
                    android:fontFamily="@font/arial_mt_rounded"
                    android:text="@string/no_text"
                    android:textColor="@color/heading"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/sleep"
                    android:layout_width="49dp"
                    android:layout_height="44dp"
                    android:layout_below="@id/wokeup"
                    android:layout_alignEnd="@+id/wokeup"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/sleep_symbol" />

                <TextView
                    android:id="@+id/sleep_title"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="92dp"
                    android:layout_toEndOf="@+id/sleep"
                    android:fontFamily="@font/arial_nova_light"
                    android:text="Sleep Time"
                    android:textColor="@color/heading" />

                <TextView
                    android:id="@+id/sleepTime"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="114dp"
                    android:layout_toEndOf="@+id/sleep"
                    android:fontFamily="@font/arial_mt_rounded"
                    android:text="@string/no_text"
                    android:textColor="@color/heading"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/sleepdrtn"
                    android:layout_width="46dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@id/wokeup_title"
                    android:background="@drawable/wallclock" />

                <TextView
                    android:id="@+id/sleepdur_title"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="14dp"
                    android:layout_toEndOf="@+id/sleepdrtn"
                    android:fontFamily="@font/arial_nova_light"
                    android:text="Total Duration"
                    android:textColor="@color/heading" />

                <TextView
                    android:id="@+id/sleepdurTime"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="34dp"
                    android:layout_toEndOf="@+id/sleepdrtn"
                    android:fontFamily="@font/arial_mt_rounded"
                    android:text="@string/no_text"
                    android:textColor="@color/heading"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/mood"
                    android:layout_width="42dp"
                    android:layout_height="44dp"
                    android:layout_below="@id/wokeup"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="34dp"
                    android:layout_toEndOf="@id/sleep_title"
                    android:background="@drawable/happy" />

                <TextView
                    android:id="@+id/mood_title"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="92dp"
                    android:layout_toEndOf="@+id/mood"
                    android:fontFamily="@font/arial_nova_light"
                    android:text="Mood"
                    android:textColor="@color/heading" />

                <TextView
                    android:id="@+id/moodText"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="114dp"
                    android:layout_toEndOf="@+id/mood"
                    android:fontFamily="@font/arial_mt_rounded"
                    android:text="@string/no_text"
                    android:textColor="@color/heading"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Button
                android:id="@+id/statistic_button"
                android:layout_width="136dp"
                android:layout_height="42dp"
                android:layout_below="@+id/card3"
                android:layout_alignEnd="@+id/card3"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/button"
                android:fontFamily="@font/arial_mt_rounded"
                android:text="Statistics"
                android:textAllCaps="false"
                android:textColor="@color/subtitle"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/buttons"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>

        </RelativeLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        app:itemBackground="@color/navig"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:backgroundTint="@color/white"
        app:menu="@menu/menu_button"
        android:layout_alignParentBottom="true" />



</RelativeLayout>